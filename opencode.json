{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "model": "anthropic/claude-sonnet-4-5",
  "small_model": "anthropic/claude-haiku-4-5",
  "default_agent": "build",
  "share": "manual",
  "autoupdate": true,
  "instructions": [
    "AGENTS.md",
    "docs/contributing.md",
    "README.md"
  ],
  "tui": {
    "scroll_speed": 3,
    "diff_style": "auto"
  },
  "server": {
    "port": 4096,
    "hostname": "0.0.0.0",
    "mdns": true
  },
  "tools": {
    "read": true,
    "write": true,
    "edit": true,
    "bash": true,
    "glob": true,
    "grep": true,
    "webfetch": true,
    "websearch": true,
    "task": true
  },
  "permission": {
    "read": "allow",
    "write": "allow",
    "edit": "allow",
    "bash": {
      "git *": "allow",
      "npm *": "allow",
      "mkdocs *": "allow",
      "python *": "allow",
      "mkdir": "allow",
      "ls": "allow",
      "pwd": "allow",
      "cat": "allow",
      "echo": "allow",
      "*": "ask"
    },
    "webfetch": "allow",
    "websearch": "allow"
  },
  "compaction": {
    "auto": true,
    "prune": true
  },
  "agent": {
    "docs-reviewer": {
      "description": "文檔質量審查專家，檢查準確性、一致性和可讀性",
      "mode": "subagent",
      "model": "anthropic/claude-sonnet-4-5",
      "temperature": 0.1,
      "tools": {
        "read": true,
        "write": false,
        "edit": false,
        "bash": false
      }
    },
    "example-generator": {
      "description": "程式碼範例生成專家，創建可執行的實用範例",
      "mode": "subagent", 
      "model": "anthropic/claude-sonnet-4-5",
      "temperature": 0.3,
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true
      }
    }
  },
  "keybinds": {
    "leader": "ctrl+x",
    "app_exit": "ctrl+c,ctrl+d,<leader>q",
    "theme_list": "<leader>t",
    "sidebar_toggle": "<leader>b",
    "session_new": "<leader>n",
    "model_list": "<leader>m",
    "agent_list": "<leader>a",
    "command_list": "ctrl+p",
    "share": "<leader>s",
    "undo": "<leader>u",
    "redo": "<leader>r"
  }
}